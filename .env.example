# Minecraft Server Configuration
MINECRAFT_HOST=Hasgang197.aternos.me
MINECRAFT_PORT=39617
MINECRAFT_USERNAME=AutoBot
MINECRAFT_VERSION=1.21.10

# Note: For team mode (npm run team), bot usernames are auto-generated:
# - DefenderBot (protects base)
# - BuilderBot (builds structures)  
# - MinerBot (gathers resources)
# The MINECRAFT_USERNAME above is only used for single bot mode (npm start)

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN= 
TELEGRAM_CHAT_ID= 

# Google Gemini AI Configuration (Optional - for enhanced AI decision making)
# Get your free API key from: https://ai.google.dev/
GEMINI_API_KEY=

# Bot Behavior Settings
MIN_HEALTH_PERCENT=60
MIN_FOOD_LEVEL=10
MAX_MINING_DEPTH=256
MIN_MINING_DEPTH=10

# v4.1.0 Features (All Optional - Opt-in via environment variables)

# Machine Learning Engine (SPRINT 1)
ML_ENABLED=true
ML_MODEL_PATH=./models
ML_DECISION_THRESHOLD=0.7
ML_INFERENCE_TIMEOUT=50

# React Web Dashboard (SPRINT 2)
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3000
DASHBOARD_HOST=localhost
SOCKETIO_ENABLED=true
SOCKETIO_PORT=3002

# Multi-Bot Coordination (SPRINT 3)
MULTIBOT_ENABLED=false
MULTIBOT_COORDINATOR_PORT=3003
MULTIBOT_MAX_BOTS=10
MULTIBOT_TERRITORY_SIZE=100

# Advanced Analytics (SPRINT 4)
ADVANCED_ANALYTICS_ENABLED=true
ECONOMY_TRACKING_ENABLED=true
ANOMALY_DETECTION_ENABLED=true

# v4.2.0 Features (All Optional - Enhanced Pathfinding)

# Advanced Pathfinding
PATHFINDING_TERRAIN_COSTS=true     # Enable terrain cost calculation for smarter routing
PATHFINDING_SMOOTH_PATHS=true      # Enable path smoothing to reduce unnecessary waypoints
PATHFINDING_MAX_NODES=10000        # Maximum nodes to explore during pathfinding

# v4.2.0 PvP Combat System (Optional - Disabled by default)
PVP_ENABLED=true                    # Enable PvP mode (attack players)
PVP_DEFAULT_STANCE=balanced         # Combat stance: aggressive, defensive, balanced
PVP_AUTO_EAT=true                   # Automatically eat food during combat
PVP_AUTO_POTION=true                # Automatically use potions during combat
PVP_ESCAPE_HEALTH=5                 # Health (in hearts) to trigger escape

